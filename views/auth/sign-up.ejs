<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>
<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <% if (error) { %>
            <div class="user-message user-message--error"><%=error.msg %></div>
        <% } %>
        <form class="login-form" action="/signup" method="POST">
            <div class="form-control">
                <label for="email">E-Mail</label>
                <input class="<%=invalidMarker === 'email' ? 'invalid': '' %>" style="width: 300px; height: 40px;" name="email" id="email" value="<%=inputValues.email%>">
            </div>
            <div class="form-control">
                <label for="password">Password</label>
                <input style="width: 300px; height: 40px;" type="password" name="password" id="password"  value="<%=inputValues.password%>" class="<%= invalidMarker === 'password' ? 'invalid':'' %>">
            </div>
            <div class="form-control">
                <label for="confirmPassword">Confirm Password</label>
                <input style="width: 300px; height: 40px;" type="password" name="confirmPassword" id="confirmPassword"  value="<%=inputValues.confirmPassword%>" class="<%= invalidMarker === 'confirmPassword' ? 'invalid':''%>">
            </div>
            <input type="hidden" name="_csrf" value="<%= csrfToken%>" />

            <button class="btn" type="submit">Signup</button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>