<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>
<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <% if (error) { %>
            <div class="user-message user-message--error"><%= error %></div>
        <% } %>
        <form class="login-form" action="/signup" method="POST">
            <div class="form-control">
                <label for="email">E-Mail</label>
                <input style="width: 300px; height: 40px;" name="email" id="email">
            </div>
            <div class="form-control">
                <label for="password">Password</label>
                <input style="width: 300px; height: 40px;" type="password" name="password" id="password">
            </div>
            <div class="form-control">
                <label for="confirmPassword">Confirm Password</label>
                <input style="width: 300px; height: 40px;" type="password" name="confirmPassword" id="confirmPassword">
            </div>
            <input type="hidden" name="_csrf" value="<%= csrfToken%>" />

            <button class="btn" type="submit">Signup</button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>